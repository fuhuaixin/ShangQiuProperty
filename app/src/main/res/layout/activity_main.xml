<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rg_home" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/image_bot_bg" />


    <RadioGroup
        android:id="@+id/rg_home"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

            <RadioButton
                android:checked="true"
                android:layout_marginTop="10dp"
                android:id="@+id/rb_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_main_home"
                android:text="首页"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@drawable/bottom_button_text_selector"/>




            <RadioButton
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/rb_scan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:button="@null"
                android:layout_marginBottom="5dp"
                android:drawableTop="@mipmap/icon_bottom_scan"
                android:text="扫一扫"
                android:textColor="@drawable/bottom_button_text_selector"
                android:textSize="10sp" />




            <RadioButton
                android:layout_marginTop="10dp"
                android:id="@+id/rb_mine"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableTop="@drawable/selector_main_mine"
                android:text="我的"
                android:gravity="center"
                android:textColor="@drawable/bottom_button_text_selector"
                android:textSize="10sp" />

    </RadioGroup>

</RelativeLayout>