<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:id="@+id/rl_item">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/image_status"
        android:src="@mipmap/icon_repairs_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ll_msg"
        android:layout_marginLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/image_status">

        <TextView
            android:id="@+id/tv_msg"
            android:text="111"
            android:maxLines="2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/tv333"
            android:ellipsize="end"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_type_room"
            android:textSize="14sp"
            android:textColor="@color/tv888"
            android:layout_marginTop="10dp"
            android:text="类型和房间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_status"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:layout_centerVertical="true"
        android:text="已完成"
        android:textColor="@color/tvaaa"
        android:layout_toLeftOf="@+id/image_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/image_right"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_repairs_right"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginLeft="31dp"
        android:background="@color/all_line"
        android:layout_below="@+id/ll_msg"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>